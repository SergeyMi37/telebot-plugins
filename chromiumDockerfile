# Используем официальный образ Python 3.10
FROM python:3.10.4

# Устанавливаем рабочую директорию
WORKDIR /app

# Устанавливаем системные зависимости для Playwright Chromium
RUN apt-get update && apt-get install -y \
    wget \
    unzip \
    curl \
    ca-certificates \
    # Системные библиотеки для Chromium
    libnss3 \
    libnspr4 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libdrm2 \
    libdbus-1-3 \
    libxkbcommon0 \
    libxcomposite1 \
    libxdamage1 \
    libxfixes3 \
    libxrandr2 \
    libgbm1 \
    libasound2 \
    libatspi2.0-0 \
    libpangocairo-1.0-0 \
    libpango-1.0-0 \
    libcairo2 \
    fonts-liberation \
    libgdk-pixbuf2.0-0 \
    # Для работы без display
    xvfb \
    # Может понадобиться для запуска
    libxshmfence1 \
    && rm -rf /var/lib/apt/lists/*

RUN apt-get update && apt-get install -y \
    # Основные SSL-библиотеки
    ca-certificates \
    libssl1.1 \
    libssl-dev \
    openssl \
    # Обновление хранилища сертификатов
    && update-ca-certificates \
    # Убедитесь, что ссылки на библиотеки созданы
    && ln -sf /usr/lib/x86_64-linux-gnu/libssl.so.3 /usr/lib/x86_64-linux-gnu/libssl.so \
    && ln -sf /usr/lib/x86_64-linux-gnu/libcrypto.so.3 /usr/lib/x86_64-linux-gnu/libcrypto.so \
    # Очистка
    && rm -rf /var/lib/apt/lists/*

# Копируем и устанавливаем Python-зависимости
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Устанавливаем браузеры для Playwright
RUN playwright install chromium
RUN playwright install-deps chromium  # Установка системных зависимостей

# Проверяем установку
RUN python -c "from playwright.sync_api import sync_playwright; print('Playwright импортирован успешно')"

# Создаем рабочую директорию
RUN mkdir /code
WORKDIR /code

# Копируем код
COPY . /code/
COPY .git/config /code/.git/config

    